    "architecture": {
        "64bit": {
            "url": "https://github.com/TriliumNext/Notes/releases/download/v0.91.6/TriliumNextNotes-v0.91.6-windows-x64.zip",
            "hash": "e098b07dcb4e4548bc2ab5524ca933e04d8d79cc66bc054010c5054b52ad2733",
            "extract_dir": "triliumnext-windows-x64"
        }
    },
    "shortcuts": [
        [
            "trilium.exe",
            "TriliumNext Notes"
        ]
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\triliumnext-data\") -and (Test-Path \"$env:APPDATA\\trilium-data\")) {",
        "    info \"Copying old '$env:APPDATA\\trilium-data' to '$persist_dir\\triliumnext-data'\"",
        "    ensure \"$persist_dir\\triliumnext-data\" | Out-Null",
        "    Copy-Item \"$env:APPDATA\\trilium-data\\*\" \"$persist_dir\\triliumnext-data\" -Recurse -Force",
        "}"
    ],
    "env_set": {
        "TRILIUM_DATA_DIR": "$persist_dir\\triliumnext-data"
    },
    "persist": "triliumnext-data",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/TriliumNext/Notes/releases/download/v$version/TriliumNextNotes-v$version-windows-x64.zip"
                        
            }
        }
    }
}
